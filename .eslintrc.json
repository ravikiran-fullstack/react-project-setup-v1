{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    // write rules for disabling semicolon at the end of line
    "rules": {
        "semi": ["error", "always"]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }    

}
